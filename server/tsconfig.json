{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "extends": "../tsconfig.paths.json",
}
